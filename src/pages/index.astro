---
import Main from "@/layouts/Main.astro"
import { scryptAsync } from '@noble/hashes/scrypt';
import { bytesToHex as toHex } from '@noble/hashes/utils'

let scr2 = await scryptAsync('password', 'salt', { N: 2 ** 16, r: 8, p: 1, dkLen: 32 });
let scr2Hex = toHex(scr2)
---

<Main>
    <h1 class="p-4 font-semibold">
        Astro Page Samples
        <p class="text-gray-300">
            <small>{scr2Hex}</small>
        </p>
    </h1>
    
    <div class="flex flex-col px-4 py-2">
        <a href="/dashboard-1" class="hover:underline underline-offset-2">
            Dashboard-1
        </a>
        <a href="/filedrive-1" class="hover:underline underline-offset-2">
            FileDrive-1
        </a>
    </div>
</Main>
