---
import { db, Dummies } from "astro:db"
import Main from "@/layouts/Main.astro"

const dumm = (await db.select().from(Dummies))[0]
---

<Main>
    <h1 class="p-4 font-semibold">
        Astro Page Samples
        <p class="text-xs text-gray-300">
            <small>{ dumm.id }</small>
        </p>
    </h1>
    
    <div class="flex flex-col px-4 py-2">
        <a href="/dashboard-1" class="hover:underline underline-offset-2">
            Dashboard-1
        </a>
        <a href="/filedrive-1" class="hover:underline underline-offset-2">
            FileDrive-1
        </a>
    </div>
</Main>
